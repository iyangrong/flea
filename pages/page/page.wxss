.search{
  width: 100%;
  height: 130rpx;
  background-color: #cccccc;
  box-sizing: border-box;
  padding: 25rpx 50rpx;
}

.search input{
  display: block;
  height: 100%;
  width: 100%;
  background-color: white;
  border: 3rpx solid #797979;
  border-radius: 50rpx;
  padding-left:30rpx;
}

.place-holder{
  color:#333333;
  font-size: 40rpx;
  margin-left: 280rpx;
  font-family: 'Courier New', Courier, monospace;
}

.classify{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}

.total, .sports, .study, .electron, .living, .other{
  width: 12%;
  height:100%;
  border: 3rpx solid #797979;
  margin-left: 3%;
}